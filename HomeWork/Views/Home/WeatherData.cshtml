@model HomeWork.Models.WeatherMainResponse

<div id="currentWeatherData">
    @Helpers.getLoadingDiv()
    <h3>Погода на сегодня в славном городе @Model.name:</h3>
    <div class="row">
        <div class="col tempDiv" align="center">
            <p id="tempInfo"><b>Температура:</b> @Model.temp C</p>
        </div>
    </div>
    <div class="row" align="center">
        <div class="col-md-3">
            <p><b>Давление:</b> @Model.pressure Мпа</p>
        </div>
        <div class="col-md-3">
            <p><b>Влажность:</b> @Model.humidity %</p>
        </div>
        <div class="col-md-3">
            <p><b>Т Min:</b> @Model.temp_min C</p>
        </div>
        <div class="col-md-3">
            <p><b>Т Max:</b> @Model.temp_max C</p>
        </div>
    </div>
</div>
